<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rakuten">



    <View
        android:id="@+id/view2"
        android:layout_width="423dp"
        android:layout_height="248dp"
        android:background="#D2F7BC"
        android:layerType="none"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UnknownId" />

    <ImageView
        android:id="@+id/ingredientBackButton"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert"
        android:contentDescription="@string/back_button_description"
        tools:ignore="UnknownIdInLayout" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/料理"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientBackButton"
        app:layout_constraintEnd_toEndOf="parent" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/readyButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="NotSibling">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ここにスクロールさせたいやつ入れていくぜーーーい -->

            <!-- レシピ名1のTextView -->
            <TextView
                android:id="@+id/textViewRecipe1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="レシピ名1"
                android:textSize="18sp"
                android:layout_margin="8dp"
                tools:ignore="MissingConstraints" />

            <!-- レシピ1の画像を表示するImageView -->
            <ImageView
                android:id="@+id/imageViewRecipe1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                tools:srcCompat="@tools:sample/avatars"
                tools:ignore="MissingConstraints" />

            <!-- レシピ名2のTextView -->
            <TextView
                android:id="@+id/textViewRecipe2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="レシピ名2"
                android:textSize="18sp"
                android:layout_margin="8dp"
                tools:ignore="MissingConstraints" />

            <!-- レシピ2の画像を表示するImageView -->
            <ImageView
                android:id="@+id/imageViewRecipe2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                tools:srcCompat="@tools:sample/avatars"
                tools:ignore="MissingConstraints" />

            <!-- レシピ名3のTextView -->
            <TextView
                android:id="@+id/textViewRecipe3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="レシピ名3"
                android:textSize="18sp"
                android:layout_margin="8dp"
                tools:ignore="MissingConstraints" />

            <!-- レシピ3の画像を表示するImageView -->
            <ImageView
                android:id="@+id/imageViewRecipe3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                tools:srcCompat="@tools:sample/avatars"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/readyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="#1D47C5"
                android:text="準備完了"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
